{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
  {
    "source": "/reviews/**",
    "destination": "/article.html"
  },
  {
    "source": "/news/**",
    "destination": "/article.html"
  }
      ]
  }
}
