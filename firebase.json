{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
      {
        "source": "/admin",
        "destination": "/admin.html"
      },
      {
        "source": "/news/**",
        "destination": "/article.html"
      },
      {
        "source": "/reviews/**",
        "destination": "/article.html"
      },
      {
        "source": "/column/**",
        "destination": "/article.html"
      }
    ]
  }
}
